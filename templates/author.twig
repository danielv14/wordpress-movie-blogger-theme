{% extends "layouts/base.twig" %}

{% block content %}
<section class="container archive">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<h2>{{author | capitalize}}</h2>
			<p class="lead">All content by {{author | capitalize}}</p>
			{% for post in posts %}
				{% include ["tease-"~post.post_type~".twig", "tease.twig"] %}
			{% endfor %}
		</div>
	</div>
</section>
{% endblock %}
