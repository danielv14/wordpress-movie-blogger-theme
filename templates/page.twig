{% extends "layouts/base.twig" %}

{% block content %}
	<div class="container">
		<div class="col-md-8 col-md-offset-2">
			<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
				<section class="article-content">
					<h1 class="article-h1">{{post.title}}</h1>
					<div class="article-body">
						{{post.content}}
					</div>
				</section>
			</article>
		</div>

	</div><!-- /content-wrapper -->
{% endblock %}
