<article class="tease tease-{{post.post_type}}" id="tease-{{post.ID}}">
	{% block content %}
		<h3>
			<i class="fa fa-star-half-o" aria-hidden="true" title="Review"></i>
			<a href="{{post.link}}">{{post.title}}</a>
		</h3>
		<span class="text-muted">
			By <a class="author-link" href="{{post.author.path}}">{{ post.author.name }} </a>
			in
			{% for category in post.categories %}
				<span class="label label-default">
					<a class="author-link" href="{{category.path}}">{{category}}</a>
				</span>
			{% endfor %}
			<span>&bull;</span> {{ post.post_date|date}}
		</span>

		<p>{{post.get_preview}}</p>

	{% endblock %}
</article>
